<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/adViewbindy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bindy1.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00E676"
                android:text="@string/bindy_to_komendy_lub_zestawy_komend_wykonywanych_po_naci_ni_ciu_jednego_przycisku"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bindy1.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/none"
                android:textAlignment="center"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/bindy2.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00E676"
                android:text="@string/przypisz_komend_komendy_do_przycisku"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bindy2.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bind_przycisk_komenda"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bindy3.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00E676"
                android:text="@string/osx_przypisz_komend_komendy_do_przycisku"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bindy3.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bind_osx_przycisk_komenda"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bindy4.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00E676"
                android:text="@string/usu_bind_z_przycisku"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bindy4.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unbind_przycisk"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bindy5.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00E676"
                android:text="@string/lista_przycisk_w_z_przypisan_akcj"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bindy5.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/key_listboundkeys"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bindy6.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00E676"
                android:text="@string/binduj_komend_z_zmien_warto_ci_np_voice_enable_1"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bindy6.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bindtoggle_przycisk_komenda"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewbindy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:adSize="SMART_BANNER"
        app:adUnitId="ca-app-pub-4834003578511022/4679805754"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>