                android:id="@+id/celownik1.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cl_crosshairstyle"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/celownik2.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#76FF03"
                android:text="@string/zmienia_wielko_celownika"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/celownik2.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cl_crosshairsize"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/celownik3.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#76FF03"
                android:text="@string/zmienia_przerw_mi_dzy_kreskami_w_celowniku"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/celownik3.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cl_crosshairgap"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/celownik4.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#76FF03"
                android:text="@string/zmienia_grubo_celownika"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/celownik4.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cl_crosshairthicknes"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/celownik5.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#76FF03"
                android:text="@string/komenda_na_kropk_w_celowniku_0_wy_cza_1_w_cza"
                android:textAlignment="center"
                android:textSize="18sp"
